<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xin.xlchen.dhu.stumanger.mapper.UserMapper">
 
  <!-- 查询所有用户 -->
  <select id="findAllUserInfo" parameterType="java.util.Map" resultType="xin.xlchen.dhu.stumanger.model.User">
   		 select * from t_user
   		  <where>
                <if test="username != null and username != ''">
                        AND  username = #{username}
                </if>
                <if test="password != null and password != ''">
                        AND  password = #{password}
                </if>
          </where>
  </select>
  
  <!-- 根据账号名查询用户 -->
  <select id="findUserInfoByUserName" parameterType="java.util.Map" resultType="xin.xlchen.dhu.stumanger.model.User">
   		 select * from t_user
   		 where username = #{username} and password = #{password}
  </select>
 
</mapper>